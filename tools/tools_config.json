{
    "readme_file": "README.txt",
    "scripts":
    {
        "tools_core.py":
        {
            "name": "Tools Core",
            "summary": "Python module for managing all tool scripts."
        },
        "font_converter.py":
        {
            "name": "Font Converter",
            "summary": "Create a header file containing font data.",
            "options":
            {
                "font_struct_template":
                [
                    "struct {name}_Font : public EMFontRenderer::Font",
                    "{{",
                    "    {name}_Font()",
                    "    {{",
                    "        name = \"{name}\";",
                    "        fontHeight = {font_height};",
                    "        lineHeight = {line_height};",
                    "",
                    "        leftPadding = {left_pad};",
                    "        rightPadding = {right_pad};",
                    "        topPadding = {top_pad};",
                    "        bottomPadding = {bottom_pad};",
                    "",
                    "        glyphs = {glyphs_ptr};",
                    "        atlas = {tex_png};",
                    "        numGlyphs = {num_glyphs};",
                    "}};"
                ]
            }
        }
    }
}